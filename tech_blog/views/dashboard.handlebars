<h1 class="text-center mb-4">Dashboard</h1>
<div id="existingblogs" class="row">
    {{#each blogs}}
        <div class="col-md-6 mb-4">
            <div class="card">
                <a href="/blogs/{{id}}" class="card-body text-decoration-none">
                    <h3 class="card-title">{{title}}</h3>
                    <h5 class="text-muted">Posted on {{createdAt}}</h5>
                    <p class="card-text">{{content}}</p>
                </a>
            </div>
        </div>
    {{/each}}
</div>
{{#if loggedIn}}
<div id="createNew" class="card text-center mt-4">
    <div class="card-body">
        <h3 class="card-title">Create New Post</h3>
        <form id="newBlog">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" class="form-control" placeholder="title">
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea id="content" class="form-control" placeholder="content"></textarea>
            </div>
            <button id="create" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
<form id="newpost" class="mt-4">
    <button class="btn btn-success">+ New Post</button>
</form>
{{/if}}
<script src="/js/dashboard.js"></script>
